<Page x:Class="PerspectiveDemo.UI.Pages.pWpf3D.BubbleChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:p="http://www.codeplex.com/perspective"
    Title="BubbleChart"
    Loaded="Page_Loaded"
    Style="{StaticResource PageStyle}">
    <Page.Resources>
        <ResourceDictionary Source="Wpf3DResources.xaml" />
    </Page.Resources>
    <Grid>
        <Button Name="bCreateFile" 
            Content="Photo"
            HorizontalAlignment="Right" VerticalAlignment="Top"
            Margin="20"
            Click="bCreateFile_Click"/>
        <p:Workshop3D Name="workshop">
            <p:XyzAxis3D Length="3.0" Signed="True"/>
        </p:Workshop3D>
    </Grid>
</Page>
