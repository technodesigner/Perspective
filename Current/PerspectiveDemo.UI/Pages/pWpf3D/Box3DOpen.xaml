<Page x:Class="PerspectiveDemo.UI.Pages.pWpf3D.Box3DOpen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:p="http://www.codeplex.com/perspective"
    Title="Open box"
    Style="{StaticResource PageStyle}">
    <Page.Resources>
        <ResourceDictionary Source="Wpf3DResources.xaml" />
    </Page.Resources>
    <p:Workshop3D>
        <p:XyzAxis3D Length="3.0"/>
        <!--An opened box-->
        <p:Box3D 
            VisibleSides="Down,Back,Front" 
            BackMaterial="{StaticResource InsideMaterial}"/>
    </p:Workshop3D>
</Page>
