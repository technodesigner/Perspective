<Page 
    x:Class="Perspective.Config.View.RenderingConfig"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:p="http://www.codeplex.com/perspective"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300"
	Title="RenderingConfig"
    Loaded="Page_Loaded">
    <StackPanel Margin="20">
        <TextBlock Name="tbRenderingTier" />
        <CheckBox 
            Name="cbIsHWAccelerationDisabled" 
            Content="IsHWAccelerationDisabled"
            IsChecked="{Binding Path=IsHWAccelerationDisabled}"/>
    </StackPanel>
</Page>
